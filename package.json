{
  "name": "@timreynolds/autofixture",
  "version": "1.1.0",
  "description": "JS port of the C# AutoFixture library",
  "main": "dist/AutoFixture",
  "types": "dist/AutoFixture",
  "directories": {
    "lib": "src"
  },
  "author": "Tim Reynolds",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timreynolds/AutoFixture.js.git"
  },
  "bugs": {
    "url": "https://github.com/timreynolds/AutoFixture.js/issues"
  },
  "homepage": "https://github.com/timreynolds/AutoFixture.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "npm run unit",
    "test:coverage": "npm run unit:coverage",
    "unit": "jest",
    "unit:coverage": "jest --coverage",
    "unit:ci": "jest src/**/*.test.ts src/*.test.ts --json --outputFile='test-results.json'",
    "lint": "tslint 'src/**/*.ts' 'integration/**/*.ts'",
    "lint:fix": "tslint --fix 'src/**/*.ts' 'integration/**/*.ts'",
    "prettier": "prettier --parser typescript --write '**/*.ts'",
    "precommit": "lint-staged",
    "postversion": "git push origin master --tags --no-verify",
    "preversion": "npm run unit && npm run build"
  },
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "11.12.2",
    "@types/object-path": "0.11.0",
    "@types/uuid": "3.4.4",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.1",
    "ts-node": "8.0.3",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.1"
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "npm-check-updates": "^3.1.3",
    "object-path": "^0.11.4",
    "uuid": "^3.2.1"
  }
}
